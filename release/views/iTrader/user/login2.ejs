<!DOCTYPE html>
<html lang="<%= userOptions.lang %>">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <title data-i18n="page_login_title"></title>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="/bower_components/bootswatch/<%= userOptions.theme %>/bootstrap.min.css" />
    <link rel="stylesheet" href="/bower_components/bootstrap3-dialog/dist/css/bootstrap-dialog.min.css" />
    <link rel="stylesheet" href="/bower_components/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.min.css" />
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css" />

    <style rel="stylesheet">
        html {
            background: url('/images/login_bg2.jpg') no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
            -o-background-size: cover;
        }
        
        .login-panel {
            margin-top: 100px;
            opacity: 0.95;
        }
        
        .alert-error {
            opacity: 0.7;
        }
        
        .blue-link {
            color: #0000EE
        }
        
        ul {
            margin-bottom: 0px;
        }
    </style>
</head>

<body>
    <div class="container-fluid" style="background-color:#fff">
        <div class="container">
            <!--<img src="/images/banner.jpg" />-->
        </div>
    </div>
    <div class="container-fluid-full">
        <div class="row_fluid">
            <div class="col-lg-3 col-md-6 col-sm-8 col-xs-12 col-lg-offset-7 col-md-offset-3 col-sm-offset-2">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center" data-i18n="login_panel_title"></h3>
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-dismissible alert-danger hidden" id="login-alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span id="login-message"></span>
                        </div>
                        <form role="form" id="login-form">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" id="login-username" name="username" type="text" oninput="AutoUpperCase(this)" data-i18n="login_input_username"
                                    value="<%= username %>" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="password" id="login-password" type="password" data-i18n="login_input_password">
                                </div>
                                <div class="form-group hidden" id="login-pin-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">PIN</div>
                                        <input class="form-control" name="pin" id="login-pin" type="password" data-i18n="login_input_pin" data-toggle="popover" data-placement="top"
                                        data-content="" required>
                                    </div>
                                </div>
                                <p class="text-muted" data-i18n="login_remark_1"></p>
                                <button class="btn btn-success btn-block" id="login-submit" type="submit" data-i18n="login_btn_submit"></button>
                            </fieldset>
                            </br>
                            <p class="text-muted" data-i18n="login_remark_2"></p>
                        </form>
                        <ul class="list-inline">
                            <li><a href="login?lang=zh-CN"><span class="blue-link">简</span></a></li>
                            <li><a href="login?lang=zh-HK"><span class="blue-link">繁</span></a></li>
                            <li><a href="login?lang=en-US"><span class="blue-link">EN</span></a></li>
                            <li class="pull-right"><a href="#"><span class="text-muted"><%= site.version %></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/i18n/dist/<%= userOptions.lang %>.js"></script>
    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/bower_components/bootstrap3-dialog/dist/js/bootstrap-dialog.min.js"></script>
    <script type="text/javascript" src="/bower_components/bootstrap-tokenfield/dist/bootstrap-tokenfield.min.js"></script>
    <script type="text/javascript" src="/iTrader/dist/js/global.js"></script>
    <script type="text/javascript" src="/iTrader/dist/js/user.js"></script>
</body>

</html>