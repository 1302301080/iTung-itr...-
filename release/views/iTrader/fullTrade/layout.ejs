<script>
	$(function () {
		seajs.use(["format", "socket-v2", "datatables", "mobile"], function (f, s, d, mo) {
			initialize(function (err) {
				if (!err) {
					var locationTag = $('#location').val() || ''
				    if (locationTag.indexOf('f') === 0) {
						seajs.use(['fundbook', 'fund-trade'], function (fb, ft) {
							fb.init($('#fund-book-panel'), initial_data.views.trade.fund_book)
							ft.init($('#fund-trade-container'), initial_data.views)
						})
					} else {
						seajs.use(['bond-trade', 'price-quote'], function (bt, bb) {
								bt.init($('#bond-trade-container'), initial_data.views)
								bb.init($('#bond-book-panel'))
						})
					}
					s.init()
					mo.init()
				}
			})
		})
	})
</script>
