<div id="change-password-panel">
    <form class="form-horizontal" id="change-password-form" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="sessionID">
        <div class="form-group form-group-sm">
            <label class="col-sm-3 control-label" data-i18n="change_password_old_password"></label>
            <div class="col-sm-8">
                <input type="password" class="form-control" name="old_password" data-i18n="change_password_old_password" required autofocus="autofocus" autocomplete="off">
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-3 control-label" data-i18n="change_password_new_password"></label>
            <div class="col-sm-8">
                <input type="password" class="form-control password" name="new_password" data-i18n="change_password_new_password" autocomplete="off">
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-3 control-label" data-i18n="change_password_confirm_password"></label>
            <div class="col-sm-8">
                <input type="password" class="form-control" name="confirm_password" data-i18n="change_password_confirm_password" autocomplete="off">
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-sm-3"></div>
            <div class="col-sm-8">
                <p class="help-block" data-i18n="change_password_prompt_message"></p>
            </div>
        </div>
    </form>
</div>